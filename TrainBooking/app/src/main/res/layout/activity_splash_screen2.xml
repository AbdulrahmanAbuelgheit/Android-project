            android:alpha=".5"
            android:background="@color/black" />
    </LinearLayout>


    <ImageView
        android:id="@+id/imgg"
        android:layout_width="280dp"
        android:layout_height="140dp"
        android:layout_above="@+id/register"
        android:layout_centerInParent="true"
        android:src="@drawable/trainicon" />

